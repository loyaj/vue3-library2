{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "types": ["vue"],
    "plugins": [
      {
        "name": "@vue/language-core"
      }
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue",
    "lib/**/*.js",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}